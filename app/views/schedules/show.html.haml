/ app/views/movies/show.html.erb
%h2
  Details
  %em= "#{@schedule.name}'s Slot" 
.row
  = link_to 'Edit', edit_schedule_path(@schedule), :class => 'btn btn-primary col-2'
  = link_to 'Delete', schedule_path(@schedule), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2'
  = link_to 'Back to Slots', schedules_path, :class => 'btn btn-primary col-2'